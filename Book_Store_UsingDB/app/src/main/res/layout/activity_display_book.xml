<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_title" />
    <TextView android:id="@+id/display_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_author" />
    <TextView android:id="@+id/display_author"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_isbn" />
    <TextView android:id="@+id/display_isbn"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search_price" />
    <TextView android:id="@+id/display_price"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
